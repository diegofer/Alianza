@font-face
	font-family 'miller'
	font-weight normal
	font-style normal
	src: url('../fonts/miller-textroman-webfont.eot')
	src: url('../fonts/miller-textroman-webfont.eot?#iefixt') format('embedded-opentype'),
		 url('../fonts/miller-textroman-webfont.woff') format('woff'),
		 url('../fonts/miller-textroman-webfont.ttf') format('truetype'),
		 url('../fonts/miller-textroman-webfont.svg#MillerTextRoman') format('svg')

@font-face
	font-family 'MacBook'
	font-weight normal
	font-style normal
	src: url('../fonts/mcboohmk-webfont.eot')
	src: url('../fonts/mcboohmk-webfont.eot?#iefixt') format('embedded-opentype'),
		 url('../fonts/mcboohmk-webfont.woff') format('woff'), 
		 url('../fonts/mcboohmk-webfont.ttf') format('truetype'), 
		 url('../fonts/mcboohmk-webfont.svg#McBooHmkRegular') format('svg')


///////////////////// IMPORTS /////////////////////
@import "help"
@import "reset"

///////////////////// EXTRUCTURA  /////////////////////
body 
	font-family verdana, arial, sans-serif
	background:url("../img/fondo-main.jpg") rgb(31,16,0)
#fondo-sup
#fondo-inf
	position relative
	width 100%
#fondo-sup
	background rgb(31,16,0)
	border-bottom solid white 1px
	box-shadow(5px 5px 20px #333333)
	z-index 5
#fondo-inf
	gradientLinear( top, #C0BEBD, 0%, #f2efef, 40% )
	z-index 1

#wrapper1
#wrapper2
	position relative
	max-width 1024px
	min-width 320px
	width 80%
#wrapper1
	margin 30px auto 0 auto
#wrapper2
	margin 30px auto 50px auto

///////////////////// CLASES /////////////////////
.video-container
	position: relative
	padding-bottom: 56.25%
	padding-top: 30px
	height: 0
	overflow: hidden

.video-container iframe  
.video-container object  
.video-container embed 
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%

.header2
	background-color rgb(223,223,221)
	.banner
		position relative 
		background-color #E0D29C
		margin 2% 0
		div
			position relative 
			margin 3% 0
		h1
			position absolute
			top 0
			z-index 0
			font-size 1em
			margin 0
			padding 5px 0 5px 2% 
		img
			position relative
			left 0
			width 100%
			height auto\\9
			z-index 100

#footer2
	padding 20px
	>a
		display inline-block
	img
		max-width 390px
		width 100%
		height auto\\9
	#aside-quienes
		flotarDer()
		margin-top 10px
		ul
			li
				display inline-block

///////////////////// CONTACTO BUSCAR /////////////////////
#search
	borderRadius 10px 10px 0 0 
	background-color rgb(223,223,221)
	padding 5px 1% 5px 1%
	text-align right
	font-size 0.8em
	a
		color black
	a:hover
		color #44C2FB
	span
		margin 0 5px
		font-size 1.5em
	input[type="search"]
		borderRadius 7px
		background rgb(187,188,193)

aside	
	text-align center
	ul#redes
		padding 0 !important
		margin 0 !important
		list-style none
		li
			width 37px
			height 40px
			a
				display block
				width 37px
				height 40px
				background-image url(../img/sprite-icons.png)
		li:nth-child(2)
			a
				background-position -37px 0
		li:nth-child(3)
			a
				background-position -74px 0
#aside-home
	position absolute
	right -39px
	top 0

///////////////////// HEADER /////////////////////
header
	position relative
	gradientLinear( top, #403820, 0%, #2D2214, 50% )

#logo
	position relative
	flotarIz()
	max-width 338px
	width 100%
	margin 1% 1% 0 1%
	img
		max-width 100%
		width auto \\9

///////////////////// NAVEGACION /////////////////////
nav
	flotarDer()
	position relative
	ul
		padding 0
	ul#menu
		text-align right
		position relative 
		>li
			display inline-block
			vertical-align top
			position relative
			text-align center
			border-left solid #2b0000 2px
			>a
				display block
				padding 0 10px
				height 100%
				line-height 75px
				color white
				font-family "Times New Roman", Georgia,Serif;
			&:hover .sub-menu
				display block !important
	.sub-menu
		position absolute
		z-index 999 
		width 140px
		display none
		text-align left
		background black//#2C2214
		borderRadius 0 0 5px 5px
		filter unquote('alpha(opacity=90)')
		opacity .90
		padding 10px
		li
			position relative
			margin-top 5px
			border-bottom 1px solid #555555
			&:hover
				background darkred
			a
				display block
				color white
				font-size 0.75em

///////////////////// CONTENIDO HOME ////////////////////

#header-home
	position relative

#galeria
	position relative
	width 100%
	top 0
	.flexslider
		margin 0 !important
		border none
		.flex-control-nav
			bottom 0
#tips-home
	position relative
	width 100%
	margin-bottom 20px
	article
		borderRadius 10px
		background-color #E7E6E5
		width 33%
		padding-bottom 10px
		&:nth-child(2)
		&:nth-child(3)
			position absolute 
			top 0
			bottom 0
			a
				position absolute
				bottom 10px
				right 10px
		&:nth-child(2)
			left 33.5%
		&:nth-child(3)
			right 0
		h3
			background #8A191D
			color white
			borderRadius 10px 10px 0 0
			margin 0
			font-size 1em
			font-weight normal
			font-family "Times New Roman", Georgia,Serif;
			padding 5px
			text-align center
		div
			text-align center
		img
			max-width 100%
			width auto \\9
			margin auto
		p
			padding 0 10px
			font-size 14px
			text-align justify
			span
				display block
				text-align right
				font-size 1em
		a
			position relative
			display block
			flotarDer()
			margin-right 10px
			margin-bottom 10px !important
			div
				display inline-block
				margin-left 5px
				width 30px
				height 30px
				background url(../img/mas.png) no-repeat

#section-inf
	.barra
		height 18px
		gradientLinear( top, #C0BEBD, 0%, #f2efef, 50% )
#preview-home
	position relative
	text-align center

	article
		width 32.5%
		display inline-block
		vertical-align top
		min-width 250px
		margin-bottom 10px
		text-align left
		&:nth-child(2)
			margin 0 1% 10px 1% 
		&:nth-child(1)
			#video
				background rgb(223,223,221) 
				padding 6% 0
				borderRadius(15px)
		h4
			margin 0 0 5px 0
			font-family "Times New Roman", Georgia,Serif;
			font-weight normal
			padding-left 10px
		img
			max-width 100%
			width auto \\9
			margin auto
			borderRadius(15px)

///////////////////// FOOTER /////////////////////	
footer
	background rgb(187,188,193)
	borderRadius(10px)
	position relative
	margin-top 25px
	text-align center
	a
		color black
	#top-footer
		position absolute
		width 100%
		height 30px
		borderRadius 10px 10px 0 0
		gradientLinear( top, #FCFCFC, 0%, #C9C9C9, 50% ) 
	ul
		padding 0
		list-style none
		font-size 12px
	>ul	
		>li:first-child
			min-width 80px
			width 80px	
		>li
			text-align center
			min-width 120px
			width 17%
			vertical-align top
			display inline-block
			div
				position relative
				height 30px
				gradientLinear( top, #FCFCFC, 0%, #C9C9C9, 50% )
				borderRadius 10px
				a
					display block
					padding-top 7px
				a:hover
					color #44C2FB
				span
					display block
					width 20px
					height 30px
					position absolute
					right 0
					top 0
					background url('../img/sprite-icons.png') no-repeat
					background-position -113px -1px
	.submenu-footer
		li
			margin-bottom 5px
			&:hover
				background #44C2FB
	p 
		text-align center
		font-size 11px
		padding-bottom 10px
		//font-family 'miller',Arial,Sans-serif


///////////////////// MEDIA QUERYS /////////////////////

@media screen and (min-width:801px) and (max-width:1000px)
	#wrapper1
	#wrapper2
		width 90%

@media screen and (max-width:800px)
	#wrapper1
	#wrapper2
		width 95%
	#aside-home
		position relative
		right 0
		ul#redes
			li
				display inline-block

@media screen and (max-width:650px)
	nav
		width 100%
		ul#menu
			text-align center
			>li
				background rgb(223,223,221)
				display block
				height 40px
				width 90%
				margin 0 auto 5px auto
				borderRadius(10px)
				>a
					color black
					line-height 40px
	#tips-home
		article
			position relative !important
			left 0 !important
			margin-top 10px
			width 100%
			a
				position relative !important
	#preview-home
		article
			width 337px
